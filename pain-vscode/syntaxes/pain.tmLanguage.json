{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Pain",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#comments"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.pain",
          "match": "\\b(fn|let|var|return|if|else|for|in|while|break|continue|class|import|async|await)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.pain",
          "match": "\\b(int|str|float32|float64|bool|list|array|map|Tensor|dynamic)\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.pain",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        },
        {
          "name": "string.quoted.double.pain",
          "match": "\"([^\"\\\\]|\\\\.)*\""
        },
        {
          "name": "constant.language.pain",
          "match": "\\b(true|false|None)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pain",
          "match": "(==|!=|<=|>=|->|&&|\\|\\||[+\\-*/%=<>!])"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.pain",
          "match": "#.*"
        }
      ]
    }
  },
  "scopeName": "source.pain"
}

